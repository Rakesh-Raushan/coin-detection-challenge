# =============================================================================
# Coin Detection API - Environment Variables
# =============================================================================
# Copy this file to .env and modify as needed.
# All variables have sensible defaults in app/core/config.py

# Model Configuration
# -------------------
# Path to YOLO model weights
# Default: ./artifacts/models/yolov8n.pt
MODEL_PATH=./artifacts/models/yolov8n.pt

# Data Directory (optional)
# -------------------------
# Override default data directory location
# Default: ./data
# DATA_DIR=./data

# API Configuration (optional)
# ----------------------------
# These are set in app/core/config.py but can be overridden here
# API_V1_PREFIX=/api/v1
# PROJECT_NAME=Coin Detection API

# Detection Settings (optional)
# -----------------------------
# Confidence threshold for detections
# CONFIDENCE_THRESHOLD=0.25

# Aspect ratio thresholds for slant detection
# SLANT_THRESHOLD_LOW=0.8
# SLANT_THRESHOLD_HIGH=1.2

# Evaluation settings
# EVAL_DATA_DIR=data/eval
# EVAL_ANNOTATIONS_PATH=data/eval/annotations.json
# EVAL_MODEL_PATH=artifacts/models/yolov8n.pt
# EVAL_MODEL_FRAMEWORK=ultralytics
# EVAL_CONF_THRESHOLD=0.25
# EVAL_OUTPUT_DIR=artifacts/evaluation
# EVAL_VERBOSE=true
